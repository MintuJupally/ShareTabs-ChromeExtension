{
  "name": "ShareTabs",
  "description": "Share your tabs in ONE CLICK!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/ShareTabs16.png",
      "32": "/images/ShareTabs32.png",
      "48": "/images/ShareTabs48.png",
      "128": "/images/ShareTabs128.png"
    }
  },
  "icons": {
    "16": "/images/ShareTabs16.png",
    "32": "/images/ShareTabs32.png",
    "48": "/images/ShareTabs48.png",
    "128": "/images/ShareTabs128.png"
  }
}
